generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String @id @default(uuid()) @db.Uuid
  title       String
  description String @db.Text
  image       String
  sourceCode  String
}

model User {
  id        String @id @default(uuid()) @db.Uuid
  email     String @unique
  firstName String
  lastName  String
}

